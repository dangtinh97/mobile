<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/package_item"
    android:layout_marginTop="12dp"
    android:layout_marginEnd="12dp"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/package_item_url_image"
            android:adjustViewBounds="true"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/phuc"
            app:shapeAppearanceOverlay="@style/ImageRadius"
            android:layout_height="200dp"/>
        <TextView
            android:layout_marginTop="4dp"
            android:paddingStart="7dp"
            android:id="@+id/home_package_name_short"
            android:layout_width="match_parent"
            android:text="Bảo hiểm TNDS xe máy"
            android:textSize="16sp"
            android:textColor="@color/main_blue"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>
        <TextView
            android:paddingStart="7dp"
            android:id="@+id/home_package_money_text"
            android:layout_width="match_parent"
            android:text="giá chỉ từ 123,000 VNĐ"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>